{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "layout": {
            "contentSize": "720px",
            "wideSize": "1200px"
        },
        "color": {
            "custom": true,
            "customGradient": true,
            "defaultPalette": true,
            "defaultGradients": true
        },
        "typography": {
            "customFontSize": true,
            "dropCap": true,
            "fontFamilies": [
                {
                    "name": "Cardo",
                    "slug": "cardo",
                    "fontFamily": "Cardo, serif",
                    "fontFace": [
                        {
                            "fontFamily": "Cardo",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "src": ["file:./assets/fonts/cardo/Cardo-Regular.woff2"]
                        },
                        {
                            "fontFamily": "Cardo",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "src": ["file:./assets/fonts/cardo/Cardo-Bold.woff2"]
                        }
                    ]
                }
            ]
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "blockGap": true,
            "units": ["px", "em", "rem", "vh", "vw", "%"]
        }
    },
    "styles": {
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                }
            }
        }
    },
    "customTemplates": [],
    "templateParts": []
} 